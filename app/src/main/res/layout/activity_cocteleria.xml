<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cocteleria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Cocteleria"
    android:background="@mipmap/fondo">

    <Button
        android:text="Mezcal"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:drawableRight="@mipmap/mezcal"
        android:id="@+id/btmezcal"
        android:layout_below="@+id/btvodka"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        />

    <Button
        android:text="Whisky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btwhisky"
        android:textSize="18sp"
        android:drawableRight="@mipmap/whiskey"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_alignBaseline="@+id/btvodka"
        android:layout_alignBottom="@+id/btvodka"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Vodka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btvodka"
        android:background="#4D78A8"
        android:layout_marginTop="81dp"
        android:textSize="18sp"
        android:drawableRight="@mipmap/vodka"
        android:textColor="#DEA230"
        android:layout_below="@+id/bttequila"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/ron"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btron"
        android:textSize="18sp"
        android:drawableRight="@mipmap/ron"
        android:layout_marginTop="141dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btwhisky"
        android:layout_alignStart="@+id/btwhisky"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Tequila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4D78A8"
        android:id="@+id/bttequila"
        android:textSize="18sp"
        android:drawableRight="@mipmap/tequila"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/btron"
        android:layout_alignBottom="@+id/btron"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
