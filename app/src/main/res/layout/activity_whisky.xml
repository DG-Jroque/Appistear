<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_whisky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Whisky"
    android:background="@mipmap/fondo"
    >

    <Button
        android:text="Ward Eight"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#DEA230"
        android:textSize="20sp"
        android:layout_below="@+id/buttonoldfashioned"
        android:layout_alignLeft="@+id/buttonoldfashioned"
        android:id="@+id/buttonwardeight" />

    <Button
        android:text="Night Cap"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#DEA230"
        android:textSize="20sp"
        android:layout_below="@+id/buttonwardeight"
        android:layout_alignLeft="@+id/buttonwardeight"
        android:layout_alignStart="@+id/buttonwardeight"
        android:id="@+id/buttonnightcap" />

    <Button
        android:text="Black jack"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#DEA230"
        android:textSize="20sp"
        android:layout_below="@+id/buttonnightcap"

        android:layout_alignLeft="@+id/buttonnightcap"
        android:id="@+id/buttonblackjack" />

    <Button
        android:text="Café Irlandés"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#DEA230"
        android:textSize="20sp"
        android:layout_below="@+id/buttonblackjack"

        android:layout_alignLeft="@+id/buttonblackjack"
        android:id="@+id/buttoncafeirlandes" />

    <TextView
        android:text="Whisky"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#DEA230"
        android:id="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Old Fshioned"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textColor="#DEA230"
        android:textSize="15sp"
        android:id="@+id/buttonoldfashioned"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />


</RelativeLayout>
