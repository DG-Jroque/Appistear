<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mezcal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Mezcal"
    android:background="@mipmap/fondo">

    <Button
        android:text="Zignum Ocuilli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bthot"
        android:layout_alignLeft="@+id/bthot"
        android:layout_alignStart="@+id/bthot"
        android:layout_marginTop="51dp"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:id="@+id/btzig"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <Button
        android:text="Mezcal sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/btmst"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_below="@+id/btblm"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <Button
        android:text="Tunacuixe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/bttun"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_below="@+id/btmst"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <Button
        android:text="Hot Pinneapple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/bthot"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_below="@+id/bttun"
        android:layout_alignLeft="@+id/btmst"
        android:layout_alignStart="@+id/btmst"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <Button
        android:text="Black Mexican"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/btblm"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/bthot"
        android:layout_alignEnd="@+id/bthot" />

    <TextView
        android:text="Mezcal"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#DEA230"
        android:id="@+id/textView"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
