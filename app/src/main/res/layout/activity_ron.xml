<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ron"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Ron"
    android:background="@mipmap/fondo">

    <Button
        android:text="Blue Hawaiian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/btblh"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_below="@+id/btdik"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="@string/ron"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#DEA230"
        android:id="@+id/textView"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="PiÃ±a colada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/btpco"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/btcub"
        android:layout_alignLeft="@+id/btcub"
        android:layout_alignStart="@+id/btcub" />

    <Button
        android:text="Mojito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/btmoj"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/btpco"
        android:layout_alignLeft="@+id/btpco"
        android:layout_alignStart="@+id/btpco" />

    <Button
        android:text="Daikiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/btdik"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/btmoj"
        android:layout_alignLeft="@+id/btmoj"
        android:layout_alignStart="@+id/btmoj" />

    <Button
        android:text="Cuba libre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btcub"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
