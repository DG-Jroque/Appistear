<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.roque.appistear.MainActivity"
    android:background="@mipmap/fondo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="android.support.v4.widget.Space"
            android:id="@+id/view"
            android:layout_weight="2.07"
            />

        <Button
            android:text="@string/juegos"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:id="@+id/juegos"
            android:background="#4D78A8"
            android:textColor="#DEA230"
            android:textSize="20sp"
            android:drawableRight="@mipmap/juego"/>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="android.support.v4.widget.Space"
            android:id="@+id/view2"
            android:layout_weight="0.31"
            />

        <Button
            android:text="@string/cocteleria"
            android:background="#4D78A8"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:id="@+id/cocteleria"
            android:textColor="#DEA230"
            android:textSize="20sp"
            android:drawableRight="@mipmap/coctel"/>

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="android.support.v4.widget.Space"
            android:id="@+id/view3"
            android:layout_weight="0.31" />

        <Button
            android:text="@string/opciones"
            android:background="#4D78A8"
            android:layout_width="217dp"
            android:layout_height="67dp"
            android:id="@+id/opciones"
            android:textColor="#DEA230"
            android:textSize="20sp"
            android:drawableRight="@mipmap/opc"
            />

    </LinearLayout>
</RelativeLayout>
