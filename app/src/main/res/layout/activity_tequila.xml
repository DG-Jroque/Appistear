<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tequila"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Tequila"
    android:background="@mipmap/fondo">

    <Button
        android:text="Margarita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmar"
        android:background="@drawable/botoninicio"
        android:textColor="#DEA230"
        android:layout_marginTop="37dp"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Paloma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/btpal"
        android:background="@drawable/botoninicio"
        android:textColor="#DEA230"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/btmar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Charro Negro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botoninicio"
        android:textColor="#DEA230"
        android:layout_marginTop="49dp"
        android:id="@+id/btchn"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/btpal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Bloody Maria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btblm"
        android:background="@drawable/botoninicio"
        android:textColor="#DEA230"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/btchn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TEQUILA"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#DEA230"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bttsu"
        android:background="@drawable/botoninicio"
        android:textColor="#DEA230"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
