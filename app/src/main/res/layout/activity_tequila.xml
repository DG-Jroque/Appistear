<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tequila"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Tequila"
    android:background="@mipmap/fondo">

    <Button
        android:text="Charro Negro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_marginTop="30dp"
        android:id="@+id/btchn"
        android:layout_below="@+id/btpal"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/bttsu"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_below="@+id/btblm"
        android:layout_alignLeft="@+id/btpal"
        android:layout_alignStart="@+id/btpal"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Paloma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/btpal"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_below="@+id/btmar"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Bloody Mary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btblm"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_below="@+id/btchn"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="Tequila"
        android:background="#4D78A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#DEA230"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Margarita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmar"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_marginTop="29dp"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/btpal"
        android:layout_alignEnd="@+id/btpal" />
</RelativeLayout>
