<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_opciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Opciones"
    android:background="@mipmap/fondo">

    <Button
        android:text="@string/acerca"
        android:layout_width="wrap_content"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_height="wrap_content"
        android:layout_marginBottom="97dp"
        android:id="@+id/btninfo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button_usa"
        android:background="@mipmap/eng"

        android:layout_alignBottom="@+id/button_mex"
        android:layout_alignTop="@+id/button_mex"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button_mex"
        android:background="@mipmap/esp"
        android:layout_alignBottom="@+id/idioma"
        android:layout_alignRight="@+id/btninfo"
        android:layout_alignEnd="@+id/btninfo" />

    <TextView
        android:text="@string/jugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:fontFamily="cursive"
        android:textSize="30sp"

        android:layout_marginTop="47dp"
        android:layout_below="@+id/button_mex"
        android:layout_alignRight="@+id/button_mex"
        android:layout_alignEnd="@+id/button_mex" />

    <TextView
        android:text="@string/idioma"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idioma"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="162dp"
        android:fontFamily="sans-serif" />

</RelativeLayout>
