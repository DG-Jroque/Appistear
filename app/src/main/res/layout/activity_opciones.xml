<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_opciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Opciones"
    android:background="@mipmap/fondo">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/idioma"
            android:background="#4D78A8"
            android:textColor="#DEA230"
            android:textSize="20sp"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:id="@+id/idioma"
            android:drawableRight="@mipmap/esp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:background="#4D78A8"
            android:textColor="#DEA230"
            android:textSize="20sp"
            android:text="@string/acerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btninfo"
            android:layout_marginTop="104dp"
            android:layout_below="@+id/idioma"
            android:layout_alignRight="@+id/idioma"
            android:layout_alignEnd="@+id/idioma"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp" />

    </LinearLayout>

</RelativeLayout>
