<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_opciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roque.appistear.Opciones"
    android:background="@mipmap/fondo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button_mex"
        android:background="@mipmap/esp"
        android:layout_below="@+id/idioma"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="37dp" />

    <TextView
        android:text="@string/idioma"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idioma"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/button_mex"
        android:id="@+id/button_usa"
        android:background="@mipmap/eng"
        android:layout_alignBaseline="@+id/button_mex"
        android:layout_alignBottom="@+id/button_mex"
        android:layout_toRightOf="@+id/idioma"
        android:layout_toEndOf="@+id/idioma" />

    <Button
        android:text="@string/acerca"
        android:layout_width="wrap_content"
        android:background="#4D78A8"
        android:textColor="#DEA230"
        android:layout_height="wrap_content"
        android:layout_marginBottom="102dp"
        android:id="@+id/btninfo"
        android:textSize="20sp"
        android:layout_above="@+id/advopc"
        android:layout_centerHorizontal="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/advopc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerinf4" >
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
